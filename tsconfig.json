{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "moduleResolution": "node",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"],
      "$*": ["src/*"]
    },
    "lib": ["ES2021", "DOM", "DOM.Iterable", "es6"],
    "types": ["svelte", "cypress", "webextension-polyfill-ts"]
  },
  "exclude": [
    "build/*",
    "docs/*",
    "extension/*",
    "node_modules/*",
    "storybook-static/*"
  ]
}
