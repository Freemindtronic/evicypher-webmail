{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf extension/build",
    "build": "yarn rollup -c",
    "start": "yarn rollup -c -w",
    "check": "yarn eslint --fix 'src/**/*.{ts,js,svelte}' && yarn stylelint --fix 'src/**/*' && yarn svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "husky install",
    "test": "echo 'No tests defined' && exit 1"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --fix",
    "*.{css,scss,svelte}": "stylelint --fix",
    "*.{js,ts,css,scss,html,svelte,json,md,yml}": "prettier --write"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@tsconfig/svelte": "^2.0.1",
    "axlsign": "git+ssh://git@github.com:Freemindtronic/lib_axlsign",
    "base64-arraybuffer": "^0.2.0",
    "crypto-js": "^4.0.0",
    "jquery": "^3.6.0",
    "qrcode": "^1.4.4",
    "rollup": "^2.52.2",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "svelte": "^3.38.3",
    "svelte-burger-menu": "git+ssh://git@github.com:jorisBarkema/svelte-burger-menu",
    "svelte-i18n": "^3.3.9",
    "svelte-preprocess": "^4.7.3",
    "svelte-spa-router": "^3.2.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.1",
    "@types/jquery": "^3.5.5",
    "@types/qrcode": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@wemake-services/stylelint-config-scss": "^0.5.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "svelte-check": "^2.2.0"
  },
  "volta": {
    "node": "16.4.0",
    "yarn": "1.22.10"
  }
}
