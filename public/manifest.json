{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "build/content-script.js"
      ]
    },
    {
      "matches": [
        "https://mail.google.com/mail/*"
      ],
      "css": [
        "injected.css"
      ]
    }
  ]
}
